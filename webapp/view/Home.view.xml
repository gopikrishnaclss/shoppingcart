<mvc:View controllerName="shoppingcart.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <Page id="page1" showHeader="false" height="100%" width="100%">
        <HBox class="forVbox" width="100%" height="100%" fitContainer="true" wrap="Wrap">
            <VBox width="30%" height="100%" fitContainer="true">
                <mvc:XMLView viewName="shoppingcart.view.Products" />
            </VBox>
            <VBox width="70%" minWidth="320px" height="100%" fitContainer="true">
                <Toolbar>
                    <Title text="{i18n>welcome}" level="H2" />
                    <ToolbarSpacer />
                    <Button icon="sap-icon://employee" tooltip="User Profile" />
                    <Button icon="sap-icon://cart" tooltip="Shopping Cart" press="cartButton" />
                </Toolbar>
                <Carousel id="imageCarousel" height="300px" width="100%" showPageIndicator="true">
                    <Image width="100%" src="/image/sample1.jpg" />
                    <Image width="100%" src="/image/sample2.jpg" />
                    <Image width="100%" src="/image/sample3.jpg" />
                </Carousel>


                <f:GridList
                    id="gridList"
                    headerText="Recommended Products"
                    
                    
                    items="{HomeList>/products}"
                >
                    <f:GridListItem  press="navProducts" >

                        <VBox class="sapUiSmallMargin">
                            <layoutData>
                                <FlexItemData growFactor="2" shrinkFactor="0" />
                            </layoutData>

                            <VBox justifyContent="Start">
                                <Title text="{HomeList>name}" wrapping="true" />
                                <Text text="{HomeList>availability}"
                                    style="{ path: 'HomeList>availability', formatter: '.statusClass' }" />
                            </VBox>

                             
                                <Image src="/image/HT-2001.jpg" width="150px" press="navProducts" />
                           
                           
                        </VBox>

                    </f:GridListItem>
                </f:GridList>


            </VBox>

        </HBox>
    </Page>
</mvc:View>